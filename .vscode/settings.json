{
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "editor.tabSize": 2,
  "files.exclude": {
    ".czrc": true,
    ".gitattributes": true,
    // ".github": true,
    ".gitignore": true,
    ".husky": true,
    ".lintstagedrc.json": true,
    ".prettierignore": true,
    ".prettierrc": true,
    "build": true,
    "jest.config.cjs": true,
    "node_modules": true,
    "pnpm-lock.yaml": true,
    "tsconfig.json": true
  },
  "workbench.editor.enablePreview": true
}
